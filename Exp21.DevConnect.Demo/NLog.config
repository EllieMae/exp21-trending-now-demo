<?xml version="1.0" encoding="utf-8" ?>
<nlog
  xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <targets>
    <target
      xsi:type="Console"
      name="console"
      layout="${message}" />
  </targets>
  <rules>
    <logger name="IMT.DeveloperConnect.API.Client.Logging.ApiPayloadLogger" minlevel="Debug" writeTo="console" />
    <logger name="IMT.DeveloperConnect.API.Client.Logging.ApiRequestLogger" minlevel="Debug" writeTo="console" />
  </rules>
</nlog>
